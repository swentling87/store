-if !@order_item.nil? && @order_item.errors.any?
  %div{class: "alert alert-danger"}
    .ul
    -@order_item.errors.full_messages.each do |msg|
      .li msg
-if @order_items.size == 0
  .div
    There are no items in your shopping cart. Please keep searching and add some items to your cart.
-else
  .col-md-5
    -@order_items.each do |order_item|
      =render 'carts/cart_row', product: order_item.product, order_item: order_item, show_total: true
  .col-md-4
    .div
      .h2 Grand Total: #{number_to_currency current_order.subtotal}
    .div.checkout
      =link_to "Checkout", new_order_path, class: "btn btn-success"
